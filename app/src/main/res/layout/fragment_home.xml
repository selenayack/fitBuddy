<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment"
    android:background="#FAF7F7"

    >


    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/linear"
        app:title="FitBuddy"
        android:textAlignment="textEnd"
        app:titleTextColor="@color/white"
        android:gravity="end"
        tools:ignore="InvalidId" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10.0dp"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/background_crop2"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <LinearLayout
                    android:id="@+id/linearlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="130.0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:onClick="onLinearLayoutClick"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="30.0dp"
                            android:text="Günlük kalori ihtiyacı hesaplama"
                            android:textColor="#FFFFFF"
                            android:textSize="18.0dp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.0">

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="40.0dp"
                            android:src="@drawable/baseline_keyboard_arrow_right_24" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dp"
                android:layout_marginTop="15.0dp"
                android:background="@drawable/backgroundcrop"
                android:orientation="vertical"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fl_Adplaceholder"
                    />


            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="0dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

                <TextView
                    android:id="@+id/textViewHedefAktiviteİle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:text="Hedef Kalori"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewAlınanKalori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="0dp"
                    android:text="Alınan"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewHedefKalanKalori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="120dp"
                    android:text="Kalan"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >

                    <TextView
                        android:id="@+id/textViewHedefAktiviteİleCal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="80dp"
                        android:text="@string/blank"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewAlınanKaloriCal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="100dp"
                        android:text="@string/blank"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewHedefKalanKaloriCal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="120dp"
                        android:text="@string/blank"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>





            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="0dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/KahvatıAddd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        app:backgroundTint="#FF5722"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/baseline_add_24"
                        tools:ignore="SpeakableTextPresentCheck" />


                    <TextView
                        android:id="@+id/textViewKahvaltı"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="150dp"
                        android:text="@string/Kahvaltı"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textViewKahvaltıKalori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Toplam Kalori"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/tableLayoutKahvaltıItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">


            </TableLayout>





            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="0dp">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/ÖğleYemeğiAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="16dp"
                    app:backgroundTint="#FF5722"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/baseline_add_24" />


                <TextView
                    android:id="@+id/textViewÖğleYemeği"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="120dp"
                    android:text="@string/Öğle_Yemeği"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textViewOgleKalori"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Toplam Kalori"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tableLayoutOgleItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">



            </TableLayout>



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="0dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/Akşam_YemeğiAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="mini"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        app:backgroundTint="#FF5722"
                        app:srcCompat="@drawable/baseline_add_24" />


                    <TextView
                        android:id="@+id/textViewAkşam_Yemeği"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="100dp"
                        android:text="@string/Akşam_Yemeği"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewKAksamKalori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Toplam Kalori"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tableLayoutAksamItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">



            </TableLayout>



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="0dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/AtıştırmalıkAdd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="16dp"
                        app:fabSize="mini"
                        app:backgroundTint="#FF5722"
                        app:srcCompat="@drawable/baseline_add_24" />


                    <TextView
                        android:id="@+id/textViewAtıştırmalık"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="140dp"
                        android:text="@string/Ara_Öğün"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/textViewAtıstırmalıkKalori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Toplam Kalori"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </TableRow>
            </TableLayout>
            <TableLayout
                android:id="@+id/tableLayoutAtıstırmalıkItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">



            </TableLayout>




        </LinearLayout>



    </ScrollView>



</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
